<div class="container mt-4">
  <%# 1. Alerta de notificação com estilo Bootstrap %>
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <%# 2. Cabeçalho da página com título e botão alinhados %>
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0"><%= Coin.model_name.human(count: 2)%></h1>
    <%= link_to t('link.new-moeda'), new_coin_path, class: "btn btn-primary" %>
  </div>

  <%# 3. Grid responsivo para exibir os cards %>
  <div id="coins" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @coins.each do |coin| %>
      <div class="col">
        <%= render coin %>
      </div>
    <% end %>
  </div>
</div>
