<div id="<%= dom_id coin %>">
  <p>
    <strong><%= Coin.human_attribute_name(:description) %></strong>
    <%= coin.description %>
  </p>

  <p>
    <strong><%= Coin.human_attribute_name(:acronym) %></strong>
    <%= coin.acronym %>
  </p>

  <p>
    <strong><%= Coin.human_attribute_name(:url_image) %></strong>
    <img src="<%= coin.url_image %>" width="25px" />
    <%#= image_tag @coin.url_image, size: "25x25"%>
  </p>

</div>
